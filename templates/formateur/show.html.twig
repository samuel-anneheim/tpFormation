{% extends 'base.html.twig' %}

{% block title %}Formateur{% endblock %}

{% block body %}
    <h1>Formateur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ formateur.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ formateur.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ formateur.prenom }}</td>
            </tr>
            <tr>
                <th>Numero_tel</th>
                <td>{{ formateur.numeroTel }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ formateur.email }}</td>
            </tr>
            {% if formateur.sessions | length > 0  %}
            <tr>
                <th>sessions de: {{ formateur.nom }}</th>
                {% for session in formateur.sessions  %}
                    <td><a href={{ url('app_session_show', { id: session.id }) }}>{{ session.nom }}</a></td>                    
                {% endfor %}
            </tr>
            {% endif %}
            {% if formateur.promotions | length > 0  %}
            <tr>
                <th>promotions de: {{ formateur.nom }}</th>
                {% for promo in formateur.promotions  %}
                    <td><a href={{ url('app_promotion_show', { id: promo.id }) }}>{{ promo.nom }}</a></td>                    
                {% endfor %}
            </tr>
            {% endif %}
        </tbody>
    </table>

    <a href="{{ path('app_formateur_index') }}">Retour Ã  la liste</a>

    <a href="{{ path('app_formateur_edit', {'id': formateur.id}) }}">modifier</a>

    {{ include('formateur/_delete_form.html.twig') }}
{% endblock %}
